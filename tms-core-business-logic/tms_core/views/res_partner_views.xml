<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to add TMS Customer details -->
        <record id="res_partner_view_form_inherit_tms" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.tms</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_tms_customer"/>
                </xpath>
                 <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="string">GSTIN</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>