<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TMS Alert Tree View -->
        <record id="tms_alert_view_tree" model="ir.ui.view">
            <field name="name">tms.alert.view.tree</field>
            <field name="model">tms.alert</field>
            <field name="arch" type="xml">
                <tree string="System Alerts" decoration-warning="alert_type == 'expiry'" decoration-danger="alert_type == 'critical_event'" decoration-info="alert_type == 'low_balance'">
                    <field name="create_date" string="Timestamp"/>
                    <field name="alert_type"/>
                    <field name="message"/>
                    <field name="res_model"/>
                    <field name="res_id"/>
                    <field name="is_acknowledged"/>
                    <field name="acknowledged_by_id"/>
                    <field name="acknowledged_at"/>
                </tree>
            </field>
        </record>

        <!-- TMS Alert Form View -->
        <record id="tms_alert_view_form" model="ir.ui.view">
            <field name="name">tms.alert.view.form</field>
            <field name="model">tms.alert</field>
            <field name="arch" type="xml">
                <form string="System Alert">
                    <sheet>
                        <group>
                            <group>
                                <field name="alert_type" readonly="1"/>
                                <field name="message" readonly="1"/>
                                <field name="res_model" readonly="1"/>
                                <field name="res_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="is_acknowledged"/>
                                <field name="acknowledged_by_id" readonly="1"/>
                                <field name="acknowledged_at" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- TMS Alert Search View -->
        <record id="tms_alert_view_search" model="ir.ui.view">
            <field name="name">tms.alert.view.search</field>
            <field name="model">tms.alert</field>
            <field name="arch" type="xml">
                <search string="Search Alerts">
                    <field name="message" string="Message"/>
                    <field name="alert_type"/>
                    <filter name="unacknowledged" string="Unacknowledged" domain="[('is_acknowledged', '=', False)]"/>
                    <filter name="acknowledged" string="Acknowledged" domain="[('is_acknowledged', '=', True)]"/>
                    <separator/>
                    <filter name="group_by_type" string="Group By Type" context="{'group_by': 'alert_type'}"/>
                </search>
            </field>
        </record>

        <!-- TMS Alert Action -->
        <record id="action_tms_alert" model="ir.actions.act_window">
            <field name="name">System Alerts</field>
            <field name="res_model">tms.alert</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_unacknowledged': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No system alerts found.
                </p><p>
                    This view lists all system-generated alerts for critical events,
                    document expiries, and low card balances.
                </p>
            </field>
        </record>

    </data>
</odoo>