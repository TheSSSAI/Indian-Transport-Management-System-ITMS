<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--
        =====================================================
        Sequence for Trip IDs
        =====================================================
        This sequence generates unique, human-readable identifiers for Trip records,
        as required by the Trip model's create method override. This ensures
        consistency and traceability for all transport jobs.
        -->
        <record id="seq_tms_trip" model="ir.sequence">
            <field name="name">TMS Trip</field>
            <field name="code">tms.trip</field>
            <field name="prefix">TRIP/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>