<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TMS Material Tree View -->
        <record id="tms_material_view_tree" model="ir.ui.view">
            <field name="name">tms.material.view.tree</field>
            <field name="model">tms.material</field>
            <field name="arch" type="xml">
                <tree string="Material Types" editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- TMS Material Action -->
        <record id="action_tms_material" model="ir.actions.act_window">
            <field name="name">Material Types</field>
            <field name="res_model">tms.material</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new material type.
                </p><p>
                    Define the different types of materials your fleet transports.
                </p>
            </field>
        </record>

    </data>
</odoo>