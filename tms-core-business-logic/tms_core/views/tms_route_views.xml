<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TMS Route Tree View -->
        <record id="tms_route_view_tree" model="ir.ui.view">
            <field name="name">tms.route.view.tree</field>
            <field name="model">tms.route</field>
            <field name="arch" type="xml">
                <tree string="Routes" editable="bottom">
                    <field name="name" required="1"/>
                    <field name="source_location" required="1"/>
                    <field name="destination_location" required="1"/>
                    <field name="distance"/>
                    <field name="estimated_time"/>
                </tree>
            </field>
        </record>

        <!-- TMS Route Action -->
        <record id="action_tms_route" model="ir.actions.act_window">
            <field name="name">Routes</field>
            <field name="res_model">tms.route</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new pre-defined route.
                </p><p>
                    Pre-defined routes can speed up trip creation by auto-populating
                    source, destination, and distance information.
                </p>
            </field>
        </record>
    </data>
</odoo>