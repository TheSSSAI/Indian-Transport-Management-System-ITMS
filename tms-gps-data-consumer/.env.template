# -----------------------------------------------------------------------------
# Odoo Application Configuration
# -----------------------------------------------------------------------------
# Master password for Odoo database management.
# WARNING: CHANGE THIS IN PRODUCTION.
ODOO_MASTER_PASSWORD=my_admin_passwd

# Odoo server configuration
ODOO_SERVER_WORKERS=4
ODOO_SERVER_LOG_LEVEL=info
ODOO_PROXY_MODE=true

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo
POSTGRES_DB=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# RabbitMQ Configuration (for tms_gps_consumer)
# -----------------------------------------------------------------------------
# The secret name in AWS Secrets Manager that holds RabbitMQ credentials.
# The secret should be a JSON string with 'username' and 'password' keys.
AWS_RABBITMQ_SECRET_NAME=tms/rabbitmq/credentials
AWS_DEFAULT_REGION=ap-south-1

# RabbitMQ broker connection details
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=q.tms.location_updates

# -----------------------------------------------------------------------------
# Odoo Addons Path
# -----------------------------------------------------------------------------
# Odoo will load addons from these paths.
# The default in the Docker setup is usually /mnt/extra-addons
ODOO_EXTRA_ADDONS_PATH=/mnt/extra-addons

# Comma-separated list of addons to install/update automatically on startup.
ODOO_AUTO_INSTALL_ADDONS=tms_gps_consumer

# -----------------------------------------------------------------------------
# Optional: Email Configuration (for Odoo notifications)
# -----------------------------------------------------------------------------
# SMTP_SERVER=your_smtp_server
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASSWORD=your_smtp_password
# SMTP_SSL=true
# EMAIL_FROM=noreply@yourdomain.com